<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:text="语言设置" />


    <LinearLayout
        android:id="@+id/lin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_fromlng"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/cn" />

            <TextView
                android:id="@+id/tv_fromlng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中文" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_switch"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@mipmap/switchlng" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tolng"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/cn" />

            <TextView
                android:id="@+id/tv_tolng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中文" />
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/auto_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="是否自动识别语言" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="音量调节" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        app:bsb_bubble_color="@android:color/black"
        app:bsb_bubble_text_color="@color/colorWhite"
        app:bsb_max="10"
        app:bsb_min="1"
        app:bsb_second_track_color="@android:color/black"
        app:bsb_section_count="1"
        app:bsb_section_text_position="below_section_mark"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_track_color="@android:color/holo_red_light" />
</LinearLayout>
