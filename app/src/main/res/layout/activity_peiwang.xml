<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorglay">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@drawable/bg_loginframe2"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入家中的Wi-Fi密码"
                android:textColor="@color/colorText"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="仅支持2.4G Wi-Fi网络"
                android:textColor="@color/colorOrange"
                android:textSize="15sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext_wifi"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/internet_network_48px"/>

<!--                <Spinner-->
<!--                    android:id="@+id/spinner"-->
<!--                    android:layout_width="220dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_marginLeft="15dp"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    />-->

                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:cursorVisible="false" />

                <TextView
                    android:id="@+id/peiwang_tv_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更换网络"
                    android:textColor="@color/cc"
                    android:textSize="10sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext_wifi"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/lock_padlock_48px"/>

                <EditText
                    android:id="@+id/et_passward"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:cursorVisible="false"
                    />

                <ImageView
                    android:id="@+id/peiwang_iv_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/eye_on_32px"/>
            </LinearLayout>


            <Button
                android:id="@+id/btn_start"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_wifi"
                android:text="开始配网" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
