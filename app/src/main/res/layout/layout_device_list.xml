<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:padding="5dp">

    <ImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/iv_device"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/wifi_device"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_device_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="自动翻译模式"
        android:textColor="@color/colorText"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/iv_device"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/lin_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@id/iv_device"
        app:layout_constraintTop_toBottomOf="@id/tv_device_sn">

        <TextView
            android:id="@+id/tv_device_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textColor="@color/colorText"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/tv_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_flag" />

        <TextView
            android:id="@+id/tv_device_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textColor="@color/colorText"
            android:textSize="15sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
